@model SocialNetworkClient.Models.MainModel

@foreach (var item in Model.PostList)
{
    <div class="container" style="align-content:center;">
        <div class="card" style="width:200px">
            <img class="card-img-top" src="@item.ImageLink" alt="Card image" style="width:100%">
            <div class="card-body">
                <h4 class="card-title">@item.FullName @@@item.Author</h4>
                <p class="card-text">@item.Content</p>
                <div id="targetComments">
                </div>
            </div>
        </div>
    </div>

    @Ajax.ActionLink(linkText: "Show Comments", actionName: "GetPostComments",routeValues:item,ajaxOptions: new AjaxOptions
        {
        HttpMethod = "Post",
        UpdateTargetId = "targetComments",
        InsertionMode = InsertionMode.Replace
        })
}

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>



