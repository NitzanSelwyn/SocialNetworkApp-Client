@model SocialNetworkClient.Models.MainModel

@{
    ViewBag.Title = "UserSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Settings</h2>
<br />

@Html.ActionLink("Edit Profile Details", "ShowEditDetails") <br /><br />
@Html.ActionLink("Change Password", "ShowChangePassword") <br /><br />
@Html.ActionLink("Blocked Users", "BlockedUsers", "Home") <br /><br />
@Html.ActionLink(linkText: "Users I'm Following", actionName: "UsersImFollowing", controllerName: "Home") <br /><br />
@Html.ActionLink(linkText: "Users That Are Following Me", actionName: "UsersThatFollowMe", controllerName: "Home") <br /><br />

@if (ViewBag.ErrorMessage != null)
{
    <script type="text/javascript">
    alert("@ViewBag.ErrorMessage");
    </script>
}
@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">
    alert("@ViewBag.SuccessMessage");
    </script>
}