@model SocialNetworkClient.Models.MainModel

@{
    ViewBag.Title = "AnotherUserView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.UserToView.FullName's Profile</h2>
@if (Model.UserToView.Posts != null)
{
    foreach (var item in Model.UserToView.Posts)
    {
        <div class="container" style="align-content:center;">
            <div class="card" style="width:200px">
                <img class="card-img-top" src="@item.ImageLink" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">@item.Author</h4>
                    <p class="card-text">@item.Content</p>
                    <p>
                        @*like will be here*@
                    </p>
                </div>
            </div>
        </div>
    }
}
else {
    <h3>This users has no posts yet</h3>
}